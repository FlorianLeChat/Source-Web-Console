{# Modèle de base #}
{% extends "base.html.twig" %}

{# Injection de code JavaScript #}
{% block javascript %}
	<script>
		// Libellé demandant le nom d'utilisateur pour une récupération de compte.
		const recover_password_username = "{{ t("form.login.username")|trans }}";

		// Libellé demandant le nouveau mot de passe pour une récupération de compte.
		const recover_password_password = "{{ t("form.login.password")|trans }}";

		// Message d'erreur lorsqu'une erreur s'est produite lors de l'inscription.
		const form_register_failed = "{{ t("form.register.failed")|trans|escape }}";

		// Message d'erreur lorsqu'une erreur s'est produite lors de la connexion.
		const form_login_failed = "{{ t("form.login.failed")|trans|escape }}";
	</script>
{% endblock %}

{# En-tête de la page #}
{% block header %}
	<ul>
		{# Les boutons présents dans l'en-tête peuvent variés si
			un utilisateur est déjà connecté à son compte. #}
		{% if app.user %}
			{# Accès au tableau de bord #}
			<li><a href="{{ path("app_dashboard_index") }}">{{ t("header.subtitle.dashboard")|trans }}</a></li>
		{% else %}
			{# Formulaire d'inscription #}
			<li><button type="button">{{ t("index.register")|trans }}</button></li>

			{# Formulaire de connexion #}
			<li><button type="button">{{ t("index.login")|trans }}</button></li>
		{% endif %}
	</ul>
{% endblock %}

{# Barre de navigation #}
{% block navigation %} {% endblock %}

{# Contenu de la page demandé #}
{% block content %}
	{# Vidéo en arrière-plan #}
	<video autoplay muted loop>
		<source src="{{ asset('build/videos/landing.mp4') }}" type="video/mp4" />
	</video>

	{# Affichage de l'animation du logo vers le dépôt GitHub #}
	{# Source : https://tholman.com/github-corners/ #}
	<a href="https://github.com/FlorianLeChat/Source-Web-Console" target="_blank">
		<svg width="80" height="80" viewBox="0 0 250 250" style="fill: #333333; color: #f59a23; position: absolute; top: 0; border: 0; left: 0; transform: scale(-1, 1);">
			<path d="M0,0 L115,115 L130,115 L142,142 L250,250 L250,0 Z"></path>
			<path d="M128.3,109.0 C113.8,99.7 119.0,89.6 119.0,89.6 C122.0,82.7 120.5,78.6 120.5,78.6 C119.2,72.0 123.4,76.3 123.4,76.3 C127.3,80.9 125.5,87.3 125.5,87.3 C122.9,97.6 130.6,101.9 134.4,103.2" fill="currentColor" style="transform-origin: 130px 106px;"></path>
			<path d="M115.0,115.0 C114.9,115.1 118.7,116.5 119.8,115.4 L133.7,101.6 C136.9,99.2 139.9,98.4 142.2,98.6 C133.8,88.0 127.5,74.4 143.8,58.0 C148.5,53.4 154.0,51.2 159.7,51.0 C160.3,49.4 163.2,43.6 171.4,40.1 C171.4,40.1 176.1,42.5 178.8,56.2 C183.1,58.6 187.2,61.8 190.9,65.4 C194.5,69.0 197.7,73.2 200.1,77.6 C213.8,80.2 216.3,84.9 216.3,84.9 C212.7,93.1 206.9,96.0 205.4,96.6 C205.1,102.4 203.0,107.8 198.3,112.5 C181.9,128.9 168.3,122.5 157.7,114.1 C157.9,116.9 156.7,120.9 152.7,124.9 L141.0,136.5 C139.8,137.7 141.6,141.9 141.8,141.8 Z" fill="currentColor"></path>
		</svg>
	</a>

	{# Informations générales du site #}
	<section id="informations">
		{# Carrousel des images #}
		<ul>
			{% for i in range(1, 4) %}
				<li><img src="{{ asset('build/images/landing/' ~ i ~ '.webp') }}" alt="Image {{ i }}" decoding="async" /></li>
			{% endfor %}
		</ul>

		{# Présentation des fonctionnalités #}
		<article>
			{# Logo du site #}
			<a href="https://github.com/FlorianLeChat/Source-Web-Console">
				<img src="{{ asset('build/images/logo.svg') }}" alt="Logo" decoding="async" />
			</a>

			{# Bouton de défilement (précédent) #}
			<button type="button">
				<i class="bi bi-caret-up-fill"></i>
			</button>

			{# Détails de chaque image #}
			<ul>
				{% for i in range(1, 4) %}
					<li>
						{# Titre #}
						{% if i > 1 %}
							<h2>{{ t("index.feature.title." ~ i)|trans }}.</h2>
						{% endif %}

						{# Description #}
						<p>{{ t("index.feature.description." ~ i)|trans|raw }}</p>
					</li>
				{% endfor %}
			</ul>

			{# Bouton de défilement (suivant) #}
			<button type="button">
				<i class="bi bi-caret-down-fill"></i>
			</button>
		</article>
	</section>

	{# Formulaire d'inscription #}
	<section id="register">
		{% include("form_register.html.twig") %}
	</section>

	{# Formulaire de connexion #}
	<section id="login">
		{% include("form_login.html.twig") %}
	</section>
{% endblock %}