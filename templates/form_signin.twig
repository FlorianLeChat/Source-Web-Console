{# Titre du formulaire #}
<h2>{{ index_phrases["index_signin"] }}</h2>

{# Description du formulaire #}
<p>{{ form_phrases["form_signin_description"] }}</p>

{# Champs du formulaire #}
<form action="dashboard.php" method="POST" novalidate>
	{# Message d'erreur #}
	<p class="error"></p>

	{# Nom d'utilisateur #}
	<label for="user_name">{{ form_phrases["form_signin_username"] }}<span>*</span></label>
	<input type="text" autocomplete="username" spellcheck="false" id="user_name" name="user_name" placeholder="John Doe" minlength="10" maxlength="50" required />
	<span></span>

	{# Mot de passe #}
	<label for="user_password">{{ form_phrases["form_signin_password"] }}<span>*</span></label>
	<input type="password" autocomplete="current-password" spellcheck="false" id="user_password" name="user_password" placeholder="?JohnDoe2022!" minlength="10" maxlength="60" required />
	<span></span>

	{# Liens vers l'inscription, connexion unique ou la récupération de mot de passe. #}
	<em>{{ form_phrases["form_signin_links"] }}</em>

	{# Bouton d'affichage du mot de passe #}
	<label for="signin_clear">{{ form_phrases["form_clear_password"] }}</label>
	<input type="checkbox" id="signin_clear" /><br /><br />

	{# Se souvenir de la connexion #}
	<label for="remember_me">{{ form_phrases["form_remember_me"] }}</label>
	<input type="checkbox" id="remember_me" name="remember_me" /><br /><br />

	{# Validation/annulation #}
	<input type="reset" value="{{ form_phrases["form_cancel_button"] }}" />
	<input type="submit" value="{{ form_phrases["form_validate_button"] }}" />
</form>