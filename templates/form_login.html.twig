{# Titre du formulaire #}
<h2>{{ t("index.login")|trans }}</h2>

{# Description du formulaire #}
<p>{{ t("form.login.description")|trans }}</p>

{# Champs du formulaire #}
<form action="dashboard.php" method="POST" novalidate>
	{# Message d'erreur #}
	<p class="error"></p>

	{# Nom d'utilisateur #}
	<label for="user_name">{{ t("form.login.username")|trans }}<span>*</span></label>
	<input type="text" autocomplete="username" spellcheck="false" id="user_name" name="user_name" placeholder="johndoe" minlength="10" maxlength="50" required />
	<span></span>

	{# Mot de passe #}
	<label for="user_password">{{ t("form.login.password")|trans }}<span>*</span></label>
	<input type="password" autocomplete="current-password" spellcheck="false" id="user_password" name="user_password" placeholder="?JohnDoe2022!" minlength="10" maxlength="60" required />
	<span></span>

	{# Liens vers l'inscription, connexion unique ou la récupération de mot de passe. #}
	<em>{{ t("form.login.links")|trans|raw }}</em>

	{# Bouton d'affichage du mot de passe #}
	<label for="login_clear">{{ t("form.clear_password")|trans }}</label>
	<input type="checkbox" id="login_clear" /><br /><br />

	{# Se souvenir de la connexion #}
	<label for="remember_me">{{ t("form.remember_me")|trans }}</label>
	<input type="checkbox" id="remember_me" name="remember_me" /><br /><br />

	{# Validation/annulation #}
	<input type="reset" value="{{ t("form.cancel_button")|trans }}" />
	<input type="submit" value="{{ t("form.validate_button")|trans }}" />
</form>