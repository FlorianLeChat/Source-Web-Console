{# Modèle de base #}
{% extends "base.html.twig" %}

{# Injection de code JavaScript #}
{% block javascript %}
	<script>
		// Libellé demandant la suppression ou non du compte utilisateur.
		const edit_remove = "{{ t("user.edit_remove")|trans }} ";

		// Libellé indiquant que l'utilisateur s'est reconnecté à son compte.
		const user_reconnected = "{{ t("user.reconnected")|trans }} ";

		// Libellé indiquant que l'utilisateur s'est déconnecté de son compte.
		const user_disconnected = "{{ t("user.disconnected")|trans }} ";
	</script>
{% endblock %}

{# Contenu de la page demandé #}
{% block content %}
	{# Description de la page #}
	<p>{{ t("user.description")|trans }}</p>

	{# Informations du compte #}
	<section id="account">
		{# Titre de la section #}
		<h2>{{ t("user.account")|trans }}</h2>

		{# Champs du formulaire #}
		<form novalidate>
			{# Nom d'utilisateur #}
			<div>
				<label for="username">{{ t("form.register.username")|trans }}<span>*</span></label>
				<input type="text" autocomplete="username" spellcheck="false" id="username" name="username" placeholder="johndoe" minlength="10" maxlength="50" required />
			</div>

			{# Mot de passe #}
			<div>
				<label for="password">{{ t("form.register.password")|trans }}<span>*</span></label>
				<input type="password" autocomplete="current-password" spellcheck="false" id="password" name="password" placeholder="?JohnDoe2022!" minlength="10" maxlength="60" required />
			</div>

			{# Suppression/mise à jour #}
			<div>
				<input type="submit" data-action="remove" value="{{ t("global.remove_title")|trans }}" />
				<input type="submit" data-action="update" value="{{ t("global.update_title")|trans }}" />
			</div>
		</form>
	</section>

	<section id="actions">
		{# Titre de la section #}
		<h2>{{ t("user.actions")|trans }}</h2>

		{# Bouton de déconnexion #}
		<input type="submit" data-action="logout" value="{{ t("user.disconnect")|trans }}" />

		{# Bouton de reconnexion #}
		<input type="submit" data-action="login" value="{{ t("user.reconnect")|trans }}" />
	</section>

	{# Ajout d'un serveur #}
	<section id="register">
		{% include("form_register.html.twig") %}
	</section>
{% endblock %}