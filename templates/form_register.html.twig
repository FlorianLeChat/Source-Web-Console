{# Informations générales de l'utilisateur #}
<article id="user">
	{# Titre du formulaire #}
	<h2>{{ t("index.register")|trans }}</h2>

	{# Description du formulaire #}
	<p>{{ t("form.register.description.user")|trans }}</p>

	{# Spécifications juridiques #}
	<div>
		<i class="bi bi-exclamation-triangle-fill"></i>
		<span>{{ t("form.rgpd_warning")|trans }}</span>
	</div>

	{# Champs du formulaire #}
	<form novalidate>
		{# Message d'erreur #}
		<p class="error"></p>

		{# Nom d'utilisateur #}
		<label for="new_username">{{ t("form.register.username")|trans }}<span>*</span></label>
		<input type="text" autocomplete="username" spellcheck="false" id="new_username" name="username" placeholder="johndoe" minlength="10" maxlength="50" required />
		<span></span>

		{# Mot de passe #}
		<label for="new_password">{{ t("form.register.password")|trans }}<span>*</span></label>
		<input type="password" autocomplete="new-password" spellcheck="false" id="new_password" name="password" placeholder="?JohnDoe2022!" minlength="10" maxlength="60" required />
		<span></span>

		{# Bouton d'affichage du mot de passe #}
		<label for="register_clear">{{ t("form.clear_password")|trans }}</label>
		<input type="checkbox" id="register_clear" /><br /><br />

		{# Génération d'un mot de passe sécurisé #}
		<label for="generation">{{ t("form.register.generation")|trans }}</label>
		<input type="checkbox" id="generation" /><br /><br />

		{# Validation/annulation #}
		<input type="reset" value="{{ t("form.cancel_button")|trans }}" />
		<input type="submit" value="{{ t("form.validate_button")|trans }}" />
	</form>

	{# Liste des étapes actuelles #}
	<ul>
		<li class="active">1</li>
		<li>2</li>
	</ul>
</article>

{# Informations du serveur #}
<article id="server">
	{# Titre du formulaire #}
	<h2>{{ t("form.register.server")|trans }}</h2>

	{# Description du formulaire #}
	<p>{{ t("form.register.description.server")|trans }}</p>

	{# Spécifications juridiques #}
	<div>
		<i class="bi bi-exclamation-triangle-fill"></i>
		<span>{{ t("form.rgpd_warning")|trans }}</span>
	</div>

	{# Champs du formulaire #}
	<form novalidate>
		{# Message d'erreur #}
		<p class="error"></p>

		{# Informations client (adresse IP & port) #}
		<label>{{ t("form.register.client.title")|trans }}<span>*</span></label>

		<input type="text" id="server_address" name="server_address" placeholder="51.75.125.244" minlength="5" maxlength="15" required />
		<span></span>

		<input type="number" id="server_port" name="server_port" placeholder="27015" min="1" max="99999" minlength="5" maxlength="5" required />
		<span></span>

		<em>{{ t("form.register.client.description")|trans }}</em>

		<hr />

		{# Informations administrateur (mot de passe) #}
		<label>{{ t("form.register.admin.title")|trans }}</label>

		<input type="text" id="server_password" name="server_password" placeholder="a2D2ea4NE6e9As" />

		<em>{{ t("form.register.admin.description")|trans }}</em>

		{# Champ caché pour le jeton de sécurité (CSRF) #}
		<input type="hidden" name="token" value="{{ csrf_token("register") }}">

		{# Validation/annulation #}
		<input type="reset" value="{{ t("form.cancel_button")|trans }}" />
		<input type="submit" value="{{ t("form.validate_button")|trans }}" />
	</form>

	{# Liste des étapes actuelles #}
	<ul>
		<li>1</li>
		<li class="active">2</li>
	</ul>
</article>