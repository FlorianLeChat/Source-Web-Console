	{# Sélection des serveurs #}
	<section id="servers">
		{# Titre de la section #}
		<h2>Liste des serveurs</h2>

		<ul>
			<li>
				{# Premier serveur #}
				<span>Nom du premier serveur</span>
				<span>XX.XX.XX.XX / XX</span>

				<button type="button" name="server_edit" value="uuid_1">
					{# Édition des propriétés du serveur #}
					<i class="bi bi-pencil-square"></i>
				</button>

				<button type="button" name="server_connect" value="uuid_1">
					{# Connexion directe au serveur #}
					<i class="bi bi-plug"></i>
				</button>
			</li>

			<li>
				{# Deuxième serveur #}
				<span>Nom du second serveur</span>
				<span>XX.XX.XX.XX / XX</span>

				<button type="button" name="server_edit" value="uuid_2">
					{# Édition des propriétés du serveur #}
					<i class="bi bi-pencil-square"></i>
				</button>

				<button type="button" name="server_connect" value="uuid_2">
					{# Connexion directe au serveur #}
					<i class="bi bi-plug"></i>
				</button>
			</li>

			<li>
				{# Troisième serveur #}
				<span>Nom du troisième serveur</span>
				<span>XX.XX.XX.XX / XX</span>

				<button type="button" name="server_edit" value="uuid_3">
					{# Édition des propriétés du serveur #}
					<i class="bi bi-pencil-square"></i>
				</button>

				<button type="button" name="server_connect" value="uuid_3">
					{# Connexion directe au serveur #}
					<i class="bi bi-plug"></i>
				</button>
			</li>
		</ul>

		<button type="button" name="servers_list" value="0">
			{# Serveurs précédents #}
			<i class="bi bi-chevron-left"></i>
		</button>

		<span>1 / 3</span>

		<button type="button" name="servers_list" value="2">
			{# Serveurs suivants #}
			<i class="bi bi-chevron-right"></i>
		</button>
	</section>

	{# Aperçu de l'état #}
	<section id="overview">
		{# État général #}
		<article id="state">
			<h3>État général</h3>

			<ul>
				<li>
