{# Modèle de base #}
{% extends "_main.twig" %}

{# Contenu de la page demandé #}
{% block content %}
	{# Description de la page #}
	<p>{{ configuration_phrases["configuration_description"] }}</p>

	{# Informations de connexion FTP #}
	<section id="stockage">
		{# Titre du formulaire #}
		<h2>{{ configuration_phrases["configuration_storage_title"] }}</h2>

		{# Spécifications juridiques #}
		<div>
			<i class="bi bi-exclamation-triangle-fill"></i>
			<span>{{ form_phrases["form_rgpd_warning"] }}</span>
		</div>

		{# Champs du formulaire #}
		<form method="POST">
			{# Adresse IP #}
			<label for="ftp_address">{{ configuration_phrases["configuration_storage_address"] }}<span>*</span></label>
			<input type="text" spellcheck="false" id="ftp_address" name="ftp_address" placeholder="147.56.210.47" minlength="7" maxlength="15" required />

			{# Port de communication #}
			<input type="text" spellcheck="false" id="ftp_port" name="ftp_port" placeholder="22" minlength="5" maxlength="5" required />

			{# Type de protocole #}
			<label for="ftp_protocol">{{ configuration_phrases["configuration_storage_protocol"] }}<span>*</span></label>
			<select id="ftp_protocol" name="ftp_protocol">
				<option value="ftp">{{ configuration_phrases["configuration_storage_ftp"] }}</option>
				<option value="sftp">{{ configuration_phrases["configuration_storage_sftp"] }}</option>
			</select>

			{# Nom d'utilisateur #}
			<label for="ftp_user">{{ configuration_phrases["configuration_storage_username"] }}<span>*</span></label>
			<input type="text" autocomplete="username" spellcheck="false" id="ftp_user" name="ftp_user" placeholder="johndoe" required />

			{# Mot de passe #}
			<label for="ftp_password">{{ configuration_phrases["configuration_storage_password"] }}<span>*</span></label>
			<input type="password" autocomplete="current-password" spellcheck="false" id="ftp_password" name="ftp_password" placeholder="?JohnDoe2022!" required />

			{# Validation #}
			<input type="submit" value="Valider" />
		</form>
	</section>

	{# Paramètres disponibles pour modification #}
	<section id="parameters">
		{# Titre de la section #}
		<h2>{{ configuration_phrases["configuration_settings_title"] }}</h2>

		{# Paramètres de la section #}
		<ul>
			<li>
				{# Nom du premier paramètre #}
				<h3>Nom du paramètre</h3>

				{# Description du premier paramètre #}
				<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>

				{# Champ de saisie du premier paramètre #}
				<input type="text" id="parameter_1" name="parameter_1" placeholder="Valeur définie" />

				{# Bouton de mise à jour #}
				<button type="button" name="value_update" value="parameter_1">
					<i class="bi bi-cloud-upload-fill"></i>
				</button>
			</li>

			<li>
				{# Nom du deuxième paramètre #}
				<h3>Nom du paramètre</h3>

				{# Description du deuxième paramètre #}
				<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>

				{# Champ de saisie du deuxième paramètre #}
				<input type="text" id="parameter_2" name="parameter_2" placeholder="Valeur définie" />

				{# Bouton de mise à jour #}
				<button type="button" name="value_update" value="parameter_2">
					<i class="bi bi-cloud-upload-fill"></i>
				</button>
			</li>

			<li>
				{# Nom du troisième paramètre #}
				<h3>Nom du paramètre</h3>

				{# Description du troisième paramètre #}
				<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>

				{# Champ de saisie du troisième paramètre #}
				<input type="text" id="parameter_3" name="parameter_3" placeholder="Valeur définie" />

				{# Bouton de mise à jour #}
				<button type="button" name="value_update" value="parameter_3">
					<i class="bi bi-cloud-upload-fill"></i>
				</button>
			</li>
		</ul>
	</section>
{% endblock %}