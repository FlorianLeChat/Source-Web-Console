{# Titre du formulaire #}
<h2>{{ footer_phrases["footer_contact"] }}</h2>

{# Description du formulaire #}
<p>{{ form_phrases["form_contact_description"] }}</p>

{# Spécifications juridiques #}
<i class="bi bi-exclamation-triangle-fill"></i>
<span>{{ form_phrases["form_rgpd_warning"] }}</span>

<form novalidate>
	{# Message d'erreur #}
	<p class="error"></p>

	{# Message de succès #}
	<p class="success">{{ form_phrases["form_contact_success"] }}</p>

	{# Adresse email #}
	<label for="email">{{ form_phrases["form_contact_email"] }}<span>*</span></label>
	<input type="email" autocomplete="email" spellcheck="false" id="email" name="email" placeholder="johndoe@gmail.com" minlength="10" maxlength="40" required />
	<span></span>

	{# Sujet de la prise de contact #}
	<label for="subject">{{ form_phrases["form_contact_subject"] }}<span>*</span></label>
	<select id="subject" name="subject">
		{% for i in range(1, 3) %}
			<option value="subject_{{ i }}">{{ form_phrases["form_contact_subject_" ~ i] }}</option>
		{% endfor %}
	</select>

	{# Contenu du message #}
	<label for="content">{{ form_phrases["form_contact_content"] }}<span>*</span></label>
	<textarea id="content" name="content" placeholder="Lorem ipsum dolor sit amet, consectetur adipiscing elit." minlength="50" maxlength="4000" required></textarea>
	<span></span>

	{# Validation/annulation #}
	<input type="reset" value="{{ form_phrases["form_cancel_button"] }}" />
	<input type="submit" value="{{ form_phrases["form_validate_button"] }}" />
</form>